<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %> <%- include("../partials/scripts") %>
    <title>Blog Page</title>
  </head>
  <body>
    <%- include("../partials/nav") %>

        <div class="container mt-3">
            <div class="container mt-3 row row-cols-4">
                <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card col" style="width: 18rem;">
                        <img src="/<%= blog.coverImageUrl %>" class="card-img-top" alt="<%- blog.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%- blog.title %></h5>
                            <a href="/blog/details/<%- blog._id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
  </body>
</html>
